<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingHorizontal="20dp">

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/find_pw_guide2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.2" />

        <TextView
            android:id="@+id/tv_find_pw_title"
            style="@style/TextMediumBoldBlack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="비밀번호 찾기"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/find_pw_guide2" />

        <TextView
            android:id="@+id/tv_find_pw_description"
            style="@style/TextSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="등록된 이메일 주소로 받은 인증코드를 입력해주세요."
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_find_pw_title" />


        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/find_pw_guide"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.3" />

        <EditText
            android:id="@+id/et_find_pw_id"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:backgroundTint="@color/darkgray2"
            android:hint="이메일 형식으로 입력"
            android:inputType="textEmailAddress"
            android:text="@={vm.id}"
            android:textColorHint="@color/darkgray1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/find_pw_guide" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_find_pw_send_code"
            style="@style/TextSmallBold"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_marginEnd="5dp"
            android:background="@color/darkgray2"
            android:text="인증코드 받기"
            android:textColor="@color/white"
            android:onClick="@{() -> vm.emailCheck()}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/et_find_pw_id" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout_signup_code"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:visibility="@{vm.uiState.codeVisible ? View.VISIBLE : View.GONE}"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btn_find_pw_send_code">

            <EditText
                android:id="@+id/et_signup_code"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:backgroundTint="@color/darkgray2"
                android:hint="인증코드 6자리 입력"
                android:inputType="numberDecimal"
                android:text="@={vm.code}"
                android:textColorHint="@color/darkgray1"
                android:textColor="@color/black"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_signup_code"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="인증코드를 확인해주세요"
                android:textColor="@color/red"
                app:helperMessage="@{vm.uiState.codeState}"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/et_signup_code" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <ImageButton
            android:id="@+id/btn_find_pw_next"
            android:layout_width="60sp"
            android:layout_height="60sp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/oval_darkgray2fill_nostroke_noradius"
            android:src="@drawable/ic_keyboard_arrow_right_40"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>